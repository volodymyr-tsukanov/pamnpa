<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.A2">

    <Button
            android:id="@+id/activity_a2_b_goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_2_b_goBack_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_a2_rv_grades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/activity_a2_b_calculate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_a2_b_goBack" />

    <Button
            android:id="@+id/activity_a2_b_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_2_b_calculate_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="66dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>