<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.A3Add">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/activity_a3_add_inputs"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp">

        <TextView
                android:text="@string/activity_3_add_mr"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_mr_label"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/activity_3_add_mr_hint"
                android:textSize="22sp"
                android:id="@+id/activity_a3_add_mr_edit"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_a3_add_mr_label" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/activity_3_add_ml"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_ml_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_mr_label"
                android:layout_marginTop="16dp"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/activity_3_add_ml_hint"
                android:textSize="22sp"
                android:id="@+id/activity_a3_add_ml_edit" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_mr_edit"
                app:layout_constraintStart_toEndOf="@+id/activity_a3_add_ml_label" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/activity_3_add_vn"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_vn_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_ml_label"
                android:layout_marginTop="24dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number|numberSigned"
                android:textSize="22sp"
                android:hint="@string/activity_3_add_vn_hint"
                android:id="@+id/activity_a3_add_vn_edit"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_ml_edit"
                app:layout_constraintStart_toEndOf="@+id/activity_a3_add_vn_label" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/activity_3_add_se"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_se_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_vn_label" android:layout_marginTop="8dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/activity_3_add_se_hint"
                android:textSize="22sp"
                android:id="@+id/activity_a3_add_se_edit"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_vn_edit"
                app:layout_constraintStart_toEndOf="@+id/activity_a3_add_se_label" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/activity_a3_add_actions"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/activity_a3_add_inputs">

        <Button
                android:text="@string/activity_3_add_b_se"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_b_se"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:text="@string/activity_3_add_b_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_b_cancel"
                app:layout_constraintStart_toEndOf="@+id/activity_a3_add_b_se" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"/>
        <Button
                android:text="@string/activity_3_add_b_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/activity_a3_add_b_save"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_a3_add_b_cancel" android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>